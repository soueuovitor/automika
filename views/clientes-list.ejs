<% include partials/header %>
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-8 p-r-0 title-margin-right">
                    <div class="page-header">
                        <div class="page-title">
                            <h1>Listagem <span>dos Clientes</span></h1>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /# row -->
            <section id="main-content">
                <div class="row">
                    <div class="col-md-12 col-sm-6 col-xs-12">
                      <div class="x_panel">
                        <div class="x_content">
                          <table class="table table-striped" id='tabela'>
                            <thead>
                              <tr>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Morada</th>
                                <th>telemovel</th>
                                <th>Email</th>
                                <th>NIF</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for (var c of clientes ) { %>
                                <tr>
                                  <td><a href="/clientes/<%= c.idclientes %>"><%= c.nome %></a></td>
                                  <td><%= c.email %></td>
                                  <td><%= c.morada %></td>
                                  <td><%= c.telemovel %></td>
                                  <td><%= c.nif %></td>
                                </tr>
                                <%} %>
                            </tbody>
                          </table>
                          <a href="/clientes/createclientes"><button type="submit" class="btn btn-success" id="toggler">Adicionar Cliente</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
            <!-- /# row -->
        </section>
    </div>
</div>
</div>



<% include partials/footer %>